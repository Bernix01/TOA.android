<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@android:color/black" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffb6b6b6" />
            <stroke android:width="1dp" android:color="#FFCECECE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:color="@android:color/black" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#fff6f6f6" />
            <stroke android:width="1dp" android:color="#FFCECECE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:color="@android:color/black">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke android:width="1dp" android:color="#ffcecece" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>