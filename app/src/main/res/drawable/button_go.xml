<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@android:color/black" android:state_pressed="true">
        <shape android:innerRadius="0dp" android:shape="rectangle">
            <solid android:color="@color/my_awesome_darker_color" />
        </shape>
    </item>
    <item android:color="@android:color/black" android:state_focused="true">
        <shape android:innerRadius="0dp" android:shape="rectangle">
            <solid android:color="@color/my_awesome_color" />
        </shape>
    </item>
    <item >
        <shape android:innerRadius="0dp" android:shape="rectangle">
            <solid android:color="@color/my_awesome_color" />
        </shape>
    </item>
</selector>