<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="7dp">

    <!-- Titulo -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/categoria"
        android:text="Titulo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- Categoría -->
    <TextView
        android:id="@+id/categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Categoría"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent" />

    <!-- Fecha -->
    <TextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Fecha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_dark" />

    <!-- Prioridad -->
    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titulo"
        android:text="-Wilmer Vera-"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" />

    <!-- Icono para la fecha -->
    <ImageView
        android:id="@+id/imageSportConsejo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/categoria"
        android:layout_alignRight="@+id/categoria"
        android:layout_alignTop="@+id/titulo" />

    <GridLayout
        android:id="@+id/tags_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autor"
        android:layout_marginTop="15dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        android:useDefaultMargins="true"
        android:verticalSpacing="10dp" />
</RelativeLayout>