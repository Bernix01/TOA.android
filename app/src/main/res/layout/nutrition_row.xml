<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nutritionCardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/nutrition_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0a0a0a">

        <ImageView
            android:id="@+id/nutrition_bck_imv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:id="@+id/nutrition_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/depbike" />

        <TextView
            android:id="@+id/nutritionSportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/nutrition_image"
            android:gravity="center_vertical|center_horizontal"
            android:text="Consejo para ciclistas"
            android:textColor="#fffefd"
            android:textSize="30sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
