<?xml version="1.0" encoding="utf-8"?>
<toa.toa.utils.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/opt_container"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_margin="2dp"
    android:background="@color/my_awesome_color"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/img_item_preference"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <toa.toa.utils.CheckBox
        android:id="@+id/option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/img_item_preference"
        android:layout_alignRight="@+id/img_item_preference"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp" />
</toa.toa.utils.SquareLayout>